<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Commonly Used -->
    <attr name="useCommonColor" format="boolean" />
    <attr name="filledColor" format="string" />
    <attr name="unfilledColor" format="string" />
    <attr name="maxValue" format="integer" />

    <!-- XML attributes -->
    <declare-styleable name="PieGraphView">
        <attr name="useArcColor" format="boolean" />
        <attr name="graphColor" format="string" />
        <attr name="enableAnimation" format="boolean" />
        <attr name="arcSpaces" format="integer" />
    </declare-styleable>

    <declare-styleable name="LinearProgressView">
        <attr name="useCommonColor" />
        <attr name="filledColor" />
        <attr name="unfilledColor" />
        <attr name="maxValue" />
    </declare-styleable>

    <declare-styleable name="DotProgressView">
        <attr name="useCommonColor" />
        <attr name="filledColor" />
        <attr name="unfilledColor" />
    </declare-styleable>

</resources>